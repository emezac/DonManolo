<h3> Credit's sale</h3>
<table border=1 cellpadding="5" cellspacing="0">
<tr>
<th> Date </th>
<th> Amount </th>
<th> Cashier</th>
</tr>
<% 
odd_or_even = 0
for historicsale in @salescr 
  odd_or_even = 1 - odd_or_even 
%>
  <tr valign="top" class="ListLine<%= odd_or_even %>">

    <td >
      <strong><span class="ListTitle"><%= h(historicsale.idsale.to_date.strftime("
%y-%m-%d")) %></span></strong> 
    </td>

    <td  align="left">
      <span class="ListTitle"> <%= h(historicsale.amount) %></span><br />
    </td>

    <td  align="left">
      <span class="ListTitle"> <%= h(historicsale.cashier) %></span><br />
    </td>

  </tr>
<% end %>
</table>
<table>
<tr><td width = 10%><span class="ListTitle"><font color=red>Total=$<%=@tot1  %></font></span></td></tr>
</table>
