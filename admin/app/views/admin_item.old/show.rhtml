<p>
  <b><%= column.human_name %>:</b>
 <%=h @item.send(column.name) %>
</p>
<% end %>

<%= link_to 'Edit', :action => 'edit', :id => @item %> |
<%= link_to 'Back', :action => 'list' %>

<center><h3>Items alias </h3></center>
